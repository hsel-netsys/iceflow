{
    "applicationName": "visionProcessing",
    "nodes": [
      {
        "task": "1",
        "name": "imageSource",
        "description": "Provides the source image for processing tasks.",
        "executor": "container",
        "container": {
          "image": "imagesource-image",
          "resources": {
            "cpu": 1,
            "memory": 512
          }
        },
        "scalingParameters": {
          "taskComplexity": 2
        },
        "communicationTask": {
          "payloadSize": 200
        },
        "downstream": [
          {
            "id": "is2fd",
            "target": "2",
            "maxPartitions": 1
          },
          {
            "id": "is2pc",
            "target": "3",
            "maxPartitions": 1
          }
        ],      
        "applicationConfiguration": {
          "measurementsSaveThreshold": 100
        }
      },
      {
        "task": "2",
        "name": "faceDetection",
        "description": "Detects faces in the provided image.",
        "executor": "container",
        "container": {
          "image": "facedetection-image",
          "resources": {
            "cpu": 1,
            "memory": 1024
          }
        },
        "scalingParameters": {
          "taskComplexity": 4
        },
        "communicationTask": {
          "payloadSize": 400
        },
        "downstream": [
          {
            "id": "fd2ad",
            "target": "4",
            "maxPartitions": 1
          },
          {
            "id": "fd2gd",
            "target": "5",
            "maxPartitions": 1
          }
        ],
        "applicationConfiguration": {
          "measurementsSaveThreshold": 100
        }
      },
      {
        "task": "3",
        "name": "peopleCounter",
        "description": "Counts the number of people in the provided image.",
        "executor": "container",
        "container": {
          "image": "peoplecount-image",
          "resources": {
            "cpu": 1,
            "memory": 1024
          }
        },
        "scalingParameters": {
          "taskComplexity": 3
        },
        "communicationTask": {
          "payloadSize": 300
        },
        "downstream": [
          {
            "id": "pc2agg",
            "target": "6",
            "maxPartitions": 1
          }
        ],
        "applicationConfiguration": {
          "measurementsSaveThreshold": 100
        }
      },
      {
        "task": "4",
        "name": "ageDetection",
        "description": "Detects the age of a person in the provided image.",
        "executor": "container",
        "container": {
          "image": "agedetection-image",
          "resources": {
            "cpu": 2,
            "memory": 2048
          }
        },
        "scalingParameters": {
          "taskComplexity": 5
        },
        "communicationTask": {
          "payloadSize": 500
        },
        "downstream": [
          {
            "id": "ad2agg",
            "target": "6",
            "maxPartitions": 1
          }
        ],
        "applicationConfiguration": {
          "measurementsSaveThreshold": 100
        }
      },
      {
        "task": "5",
        "name": "genderDetection",
        "description": "Detects the gender of a person in the provided image.",
        "executor": "container",
        "container": {
          "image": "genderdetection-iamge",
          "resources": {
            "cpu": 1,
            "memory": 1024
          }
        },
        "scalingParameters": {
          "taskComplexity": 4
        },
        "communicationTask": {
          "payloadSize": 400
        },
        "downstream": [
          {
            "id": "gd2agg",
            "target": "6",
            "maxPartitions": 1
          }
        ],
        "applicationConfiguration": {
          "measurementsSaveThreshold": 100
        }
      },
      {
        "task": "6",
        "name": "aggregate",
        "description": "Aggregates data from multiple detection tasks.",
