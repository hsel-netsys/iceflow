{
  "applicationName": "WordCount",
  "nodes": [
    {
      "task": "1",
      "name": "text2lines",
      "type": "producer",
      "description": "Splits text into lines.",
      "executor": "container",
      "container": {
        "image": "text2lines-image",
        "resources": {
          "cpu": 1,
          "memory": "1GB",
          "taskComplexity": 2
        }
      },
      "communicationTask": {
        "payloadSize": 9001
      },
      "downstream": ["2"]
    },
    {
      "task": "2",
      "name": "lines2words",
      "type": "prosumer",
      "description": "Splits lines into words.",
      "executor": "container",
      "container": {
        "image": "lines2words-image",
        "resources": {
          "cpu": 1,
          "memory": "1GB",
          "taskComplexity": 2
        }
      },
      "communicationTask": {
        "payloadSize": 9001
      },
      "downstream": ["3"]
    },
    {
      "task": "3",
      "name": "wordcount",
      "type": "consumer",
      "description": "Counts the occurrences of words.",
      "executor": "container",
      "container": {
        "image": "wordcount-image",
        "resources": {
          "cpu": 1,
          "memory": "2GB",
          "taskComplexity": 2
        }
      },
      "communicationTask": {
        "payloadSize": 9001
      }
    }
  ]
}
